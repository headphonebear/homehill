# mk3 Server Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Timezone
TZ=Europe/Berlin

# PostgreSQL
POSTGRES_USER=mk3
POSTGRES_PASSWORD=changeme_secure_password_here
POSTGRES_DB=mk3

# Traefik Dashboard Protection
# Generate BasicAuth: echo $(htpasswd -nb admin your_password) | sed -e s/\$/\$\$/g
# Or online: https://hostingcanada.org/htpasswd-generator/
TRAEFIK_BASIC_AUTH=admin:$$apr1$$abc123$$xyz

# Domain Configuration
DOMAIN=mk3.homehill.de

# Storage Paths (already mounted via Btrfs subvolumes)
MUSIC_PATH_MK3=/srv/music/mk3
MUSIC_PATH_IO1=/srv/music/io1
MUSIC_PATH_CL1=/srv/music/cl1

# Backup Configuration (for future use)
REST_REPOSITORY=s3:s3.wasabisys.com/homehill-backups/mk3
REST_PASSWORD=changeme_secure_restic_password
AWS_ACCESS_KEY_ID=your_s3_access_key
AWS_SECRET_ACCESS_KEY=your_s3_secret_key
