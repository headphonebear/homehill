# mk3 Server Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# User/Group IDs for file permissions
PUID=1000
GID=1000

# Timezone
TZ=Europe/Berlin

# PostgreSQL
POSTGRES_USER=mk3
POSTGRES_PASSWORD=changeme_secure_password_here
POSTGRES_DB=mk3

# Domain Configuration
DOMAIN=mk3.homehill.de

# Traefik (if using separate Traefik instance)
TRAEFIK_NETWORK=traefik-public

# Storage Paths
MUSIC_PATH=/srv/music

# Backup Configuration
REST_REPOSITORY=s3:s3.wasabisys.com/homehill-backups/mk3
REST_PASSWORD=changeme_secure_restic_password
AWS_ACCESS_KEY_ID=your_s3_access_key
AWS_SECRET_ACCESS_KEY=your_s3_secret_key
